		System.out.println("  |                                     |  ");
		System.out.println("  ~          Tacos | price | $0.99      ~  ");
		System.out.println("  |        Burrito | price | $1.99      |  ");
		System.out.println("  ~        Mt. Dew | price | $0.99      ~  ");
		System.out.println("  |        Churros | price | $2.00      |  ");
		System.out.println("  ~        Tamales | price | $1.50      ~  ");
