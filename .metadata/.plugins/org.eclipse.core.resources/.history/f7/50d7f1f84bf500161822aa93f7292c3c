 */
public class RockPaperScissors 
{

	public static void main(String[] args) 
	{
		int user;
		int computer;
		String msg = null;
		String userPick;
		String computerPick;
		final int LOW = 1;
		final int HIGH = 2;
		Random r = new Random();
		computer = r.nextInt(3);
		
//		int x= 5;
//		for(int i = 0; i > 5; i++)
//		{
		user = Integer.parseInt(JOptionPane.showInputDialog(null, "Type the following numbers \n3 for Rock \n1 for Paper \n2 for Scissors"));
		
		if(user == 3  || computer == 3 )
			msg = "Tie";
		if(user == 1 || computer == 1 )
			msg = "Tie";
		if(user == 2 || computer == 2)
			msg = "Tie";
				
		
		
		if(user == 3 || computer == 1)
			msg = "Computer Wins";
		if(user == 1 || computer == 2)
			msg = "Computer Wins";
		if(user == 2 || computer == 3)
			msg = "Computer Wins";
			
		
		if (user == 3 || computer == 2)
			msg = "User Wins";
		if(user == 1 || computer == 3)
			msg = "User Wins";
		if(user == 2 && computer == 1)
			msg = "User Wins";
		
		
		JOptionPane.showMessageDialog(null,msg);
		
//		}
	}

}
